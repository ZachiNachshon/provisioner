[run]
# Measure only the code specified on the source folder (prevent deep scan into poetry bundled files)
source = 
    python_scripts_lib/cli
    python_scripts_lib/colors
    python_scripts_lib/config
    python_scripts_lib/errors
    python_scripts_lib/info
    python_scripts_lib/infra
    python_scripts_lib/runner
    python_scripts_lib/utils

# Restrict the scope of investigation during code coverage calculation time
# include = utils/*.py

omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *_fakes.py
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
    

[report]
omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
